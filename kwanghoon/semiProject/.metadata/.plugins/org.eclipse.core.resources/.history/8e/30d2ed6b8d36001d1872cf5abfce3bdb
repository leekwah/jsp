<%@page import="login.UserDBBean"%>
<%@page import="login.UserBean"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%
	String id = request.getParameter("mem_uid");
	String pwd = request.getParameter("mem_pwd");
	// login.jsp 에서 input의 name값을 받아옴
	
	MemberDBBean manager = MemberDBBean.getInstance();
	
	int check = manager.userCheck(id, pwd);
	MemberBean mb = manager.getMember(id);
	// 아이디가 일치하는 멤버의 정보를 mb객체에 저장
	
	if(mb == null) {
%>
	<script>
		alert("존재하지 않는 회원");
		history.go(-1);
	</script>
<%
	} else {
		String name = mb.getMem_name();
		
		if(check == 1) {
			session.setAttribute("uid", id);
			session.setAttribute("name", name);
			session.setAttribute("Member", "yes"); // 임의로 회원일 경우 "yes"값을 준다
			response.sendRedirect("main.jsp");			
		}else if(check == 0){
%>
		<script>
			alert("비밀번호가 맞지 않습니다.");
			history.go(-1);
		</script>
<%
		}else{
%>
		<script>
			alert("아이디가 맞지 않습니다.");
			history.go(-1);
		</script>	
<%
		}
	}
%>